<solver>
    <!--    <scanAnnotatedClasses/>-->

    <solutionClass>de.jensk.optaPlannerHsOsna.CourseSchedule</solutionClass>
    <entityClass>de.jensk.optaPlannerHsOsna.Event</entityClass>
    <scoreDirectorFactory>
        <scoreDrl>de/jensk/optaPlannerHsOsna/ScoreRules.drl</scoreDrl>
    </scoreDirectorFactory>

    <moveThreadCount>AUTO</moveThreadCount>

    <constructionHeuristic><constructionHeuristicType>FIRST_FIT</constructionHeuristicType></constructionHeuristic>
    <localSearch>
        <unionMoveSelector>
            <changeMoveSelector>
                <selectionOrder>RANDOM</selectionOrder>
            </changeMoveSelector>
            <swapMoveSelector>
                <selectionOrder>RANDOM</selectionOrder>
            </swapMoveSelector>
            <moveIteratorFactory>
                <selectionOrder>RANDOM</selectionOrder>
                <moveIteratorFactoryClass>de.jensk.optaPlannerHsOsna.CustomMoves.ChangeFullEventMoveIteratorFactory</moveIteratorFactoryClass>
            </moveIteratorFactory>
            <moveIteratorFactory>
                <selectionOrder>RANDOM</selectionOrder>
                <moveIteratorFactoryClass>de.jensk.optaPlannerHsOsna.CustomMoves.DoubleChangeFullEventMoveIteratorFactory</moveIteratorFactoryClass>
            </moveIteratorFactory>
            <moveIteratorFactory>
                <selectionOrder>RANDOM</selectionOrder>
                <moveIteratorFactoryClass>de.jensk.optaPlannerHsOsna.CustomMoves.SwapFullEventMoveIteratorFactory</moveIteratorFactoryClass>
            </moveIteratorFactory>
            <moveIteratorFactory>
                <selectionOrder>RANDOM</selectionOrder>
                <moveIteratorFactoryClass>de.jensk.optaPlannerHsOsna.CustomMoves.DoubleSwapFullEventMoveIteratorFactory</moveIteratorFactoryClass>
            </moveIteratorFactory>
        </unionMoveSelector>
        <acceptor>
            <entityTabuSize>7</entityTabuSize>
        </acceptor>
        <forager>
            <acceptedCountLimit>1000</acceptedCountLimit>
        </forager>
        <termination>
            <unimprovedStepCountLimit>100</unimprovedStepCountLimit>
        </termination>
    </localSearch>
</solver>