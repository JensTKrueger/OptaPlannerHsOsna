<solver>
    <!--    <scanAnnotatedClasses/>-->

    <solutionClass>de.jensk.optaPlannerHsOsna.CourseSchedule</solutionClass>
    <entityClass>de.jensk.optaPlannerHsOsna.Event</entityClass>
    <scoreDirectorFactory>
        <scoreDrl>de/jensk/optaPlannerHsOsna/ScoreRules.drl</scoreDrl>
    </scoreDirectorFactory>

    <moveThreadCount>AUTO</moveThreadCount>

    <constructionHeuristic><constructionHeuristicType>FIRST_FIT</constructionHeuristicType></constructionHeuristic>
    <localSearch>
        <unionMoveSelector>
            <changeMoveSelector>
                <selectionOrder>RANDOM</selectionOrder>
            </changeMoveSelector>
            <swapMoveSelector>
                <selectionOrder>RANDOM</selectionOrder>
            </swapMoveSelector>
            <!--<moveListFactory>
                <selectionOrder>RANDOM</selectionOrder>
                <moveListFactoryClass>de.jensk.optaPlannerHsOsna.Customs.ChangeDayTimeRoomMoveFactory</moveListFactoryClass>
            </moveListFactory>-->
            <moveIteratorFactory>
                <selectionOrder>RANDOM</selectionOrder>
                <moveIteratorFactoryClass>de.jensk.optaPlannerHsOsna.Customs.ChangeDayTimeRoomMoveIteratorFactory</moveIteratorFactoryClass>
            </moveIteratorFactory>
        </unionMoveSelector>
        <acceptor>
            <entityTabuSize>7</entityTabuSize>
        </acceptor>
        <forager>
            <acceptedCountLimit>1000</acceptedCountLimit>
        </forager>
        <termination>
            <unimprovedStepCountLimit>100</unimprovedStepCountLimit>
        </termination>
    </localSearch>
</solver>